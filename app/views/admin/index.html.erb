<div class="row">
<ul class="nav nav-tabs" id="adminTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link recipes" id="recipe-tab" data-toggle= "tab" href="#recipes" role="tab" aria-controls="recipes" aria-selected="true">Recipes</a>
  </li>
  <li class="nav-item">
    <a class="nav-link ingredients" id="ingredients-tab" data-toggle="tab" href="#ingredients" role="tab" aria-controls="ingredients" aria-selected="false">Ingredients</a>
  </li>
  <li class="nav-item">
    <a class="nav-link equipment" id="equipment-tab" data-toggle="tab" href="#equipment" role="tab" aria-controls="equipment" aria-selected="false">Equipment</a>
  <li class="nav-item">
    <a class="nav-link rTypes" id="rTypes-tab" data-toggle="tab" href="#rTypes" role="tab" aria-controls="rTypes" aria-selected="false">R-Tags</a>
  </li>
  <li class="nav-item">
    <a class="nav-link I-Tags" id="iTags-tab" data-toggle="tab" href="#iTags" role="tab" aria-controls="iTags" aria-selected="false">I-Tags</a>
  </li>
</div>
<div class="row">
  <div class="tab-content" id="adminTab-content">
   
    <div class="tab-pane show active" id="recipes" role="tabpanel" aria-labelledby="recipes-tab">
      <%= link_to "Create new recipe", new_recipe_path %>
      <hr>
      <table>
      <% @recipes.each do |r| %>
        <tr>
          <td><%= r.name %></td>
          <td><%= link_to "Show", r, class: "text-light" %></td>
          <td><%= link_to "Edit", edit_recipe_path(r), class: "text-light" %></td>
          <td><%= link_to "Delete", r, method: "get", class: "text-light",
            data: { confirm: "Delete?" } %></td>
        </tr>
      <% end %>
      </table>
    </div>

    <div class="tab-pane" id="ingredients" role="tabpanel" aria-labelledby="ingredients-tab"><%= render 'ingredients/index' %></div>

    <div class="tab-pane" id="equipment" role="tabpanel" aria-labelledby="ingredients-tab"><%= render 'equipment/index' %></div>

    <div class="tab-pane" id="rTypes" role="tabpanel" aria-labelledby="rTypes-tab"><%= render 'shared/recipe_type_form' %></div>

    <div class="tab-pane" id="iTags" role="tabpanel" aria-labelledby="iTags-tab"><%= render 'shared/ingredient_tag_form' %></div>
  </div>
</div>
